{
  "compilerOptions": {
    // ---- Module & resolution ----
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "preserve",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    // ---- Base & Paths (fix @/* -> src/*) ----
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    // ---- Type acquisition ----
    "types": [
      "node"
    ], // If you later need test types, add "jest" in a test-only tsconfig.
    // ---- Strictness & safety ----
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // TS 5.6+ goodies (kept practical; avoids over-breaking app code)
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": false,
    "noPropertyAccessFromIndexSignature": false,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": true,
    "noImplicitAny": true,
    // Next.js plugin
    "plugins": [
      {
        "name": "next"
      }
    ],
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "src/types/next-extensions.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    // Keep non-app folders out of the compiler
    "backup-untracked-files",
    "vasquez-law-website",
    "tools",
    // Exclude tests from prod build to prevent Jest type errors in CI
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    // Long-running script not needed in build
    "scripts/test-trained-agents.ts"
  ]
}
