{
  "compilerOptions": {
    // ---- Module & resolution ----
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "preserve",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    // ---- Base & Paths (fix @/* -> src/*) ----
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "src/*": ["src/*"]
    },
    // ---- Type acquisition ----
    "types": [
      "node",
      "jest"
    ],
    // ---- Strictness & safety ----
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // Relaxed strictness to prevent build failures
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    "noPropertyAccessFromIndexSignature": false,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "noImplicitOverride": false,
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": false,
    "noImplicitAny": false,
    // Next.js plugin
    "plugins": [
      {
        "name": "next"
      }
    ],
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "src/types/next-extensions.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "backup-untracked-files",
    "vasquez-law-website",
    "tools"
  ]
}
